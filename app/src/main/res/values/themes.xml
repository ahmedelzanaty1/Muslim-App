<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MuslimApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gold</item>
        <item name="colorPrimaryVariant">@color/gold</item>
        <item name="statusBarBackground">@color/gold</item>
        <item name="colorOnPrimary">@color/gold</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="splash">
        <item name="android:background">@drawable/bg_light</item>
    </style>
    <style name="splash_ic">
        <item name="android:src">@drawable/logo_light</item>
    </style>
    <style name="main">
        <item name="android:background">@drawable/main_bg_light</item>
    </style>
    <style name="eslami_tv">
        <item name="android:textColor">@color/gray</item>
    </style>
    <style name="btn_nav">
        <item name="android:background">@color/gold</item>
    </style>

</resources>