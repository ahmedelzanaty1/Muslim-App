<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/main"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".2"
        android:adjustViewBounds="true"
        android:id="@+id/radio_ic"
        android:src="@drawable/radio_ic"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


        <ImageView
            app:layout_constraintTop_toBottomOf="@id/radio_ic"
            app:layout_constraintStart_toStartOf="@id/radio_ic"
            android:id="@+id/last_ic"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent=".04"
            app:layout_constraintWidth_percent=".04"
            android:src="@drawable/last_ic" />

        <ImageView
            app:layout_constraintTop_toBottomOf="@id/radio_ic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/pause_ic"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent=".04"
            app:layout_constraintWidth_percent=".04"
            android:src="@drawable/pause_ic" />

        <ImageView
            app:layout_constraintTop_toBottomOf="@id/radio_ic"
            app:layout_constraintStart_toEndOf="@id/radio_ic"
            android:id="@+id/next_ic"
            app:layout_constraintHeight_percent=".04"
            app:layout_constraintWidth_percent=".04"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/next_ic" />




</androidx.constraintlayout.widget.ConstraintLayout>