<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/main"
    tools:context=".fragments.SebhaFragment">
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guide_line"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".15"
        />
    <ImageView
        android:layout_width="0dp"
        app:layout_constraintWidth_percent=".13"
        android:adjustViewBounds="true"
        android:layout_height="wrap_content"
        android:id="@+id/head_sebha"
        android:src="@drawable/head_sebha"
        app:layout_constraintTop_toBottomOf="@id/guide_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:layout_width="wrap_content"
        app:layout_constraintWidth_percent=".13"
        android:adjustViewBounds="true"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".3"
        android:id="@+id/body_sebha"
        android:layout_marginTop="-17dp"
        android:src="@drawable/body_sebha"
        app:layout_constraintTop_toBottomOf="@id/head_sebha"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sebha_tv"
        android:text="@string/number_tasbeh"
        app:layout_constraintTop_toBottomOf="@id/body_sebha"
        android:textSize="25sp"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sebha_number"
        android:text="0"
        app:layout_constraintTop_toBottomOf="@id/sebha_tv"
        android:textSize="25sp"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/black"
        android:background="@drawable/box_shape"
        android:padding="12dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sebha_tasbeh"
        tools:text="سبحان الله"
        app:layout_constraintTop_toBottomOf="@id/sebha_number"
        android:textSize="25sp"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/black"
        android:background="@drawable/box_shape"
        android:padding="12dp"
        android:textStyle="bold"/>






</androidx.constraintlayout.widget.ConstraintLayout>